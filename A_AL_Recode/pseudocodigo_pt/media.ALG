Algoritmo "exercícios"

Var
  a, b : inteiro
  nome : caracter
  media: real
Inicio
  escreval("Digite seu nome: ")
  leia(nome)
  escreval("Digite a primeira nota: ")
  leia(a)
  escreval("Digite a segunda nota: ")
  leia(b)
  
  media <- (a+b)/2
  escreval(nome," sua média é: ", media)
Fimalgoritmo